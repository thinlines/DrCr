{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "drcr",
  "version": "0.1.0",
  "identifier": "me.yingtongli.drcr",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DrCr",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "resources": {
      "../libdrcr/plugins/": "plugins/",
      "../schema.sql": "schema.sql"
    }
  }
}
